{
  "rules": {
    ".read": "auth != null && (auth.token.admin === true || (auth.token.email != null && root.child('config/admins/index/' + auth.token.email.toLowerCase().replace('.', '_').replace('@', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).exists()))",
    ".write": "auth != null && (auth.token.admin === true || (auth.token.email != null && root.child('config/admins/index/' + auth.token.email.toLowerCase().replace('.', '_').replace('@', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).exists()))"
  }
}
